<div id="container">
    <div id="example">
        <div id="slides">
            <div class="slides_container">

                <div class="slide">
                  <div class="word">One</div>
                  <div class="slide_back">一</div>
                </div>
                <div class="slide">
                  <div class="word">Two</div>
                  <div class="slide_back">二</div>
                </div>
                <div class="slide">
                  <div class="word">Three</div>
                  <div class="slide_back">三</div>
                </div>
                <div class="slide">
                  <div class="word">Four</div>
                  <div class="slide_back">四</div>
                </div>
            </div>
            <a href="#" class="prev"><img src="/stylesheets/img/slide_images/arrow-prev.png" width="24" height="43" alt="Arrow Prev"></a>
            <a href="#" class="next"><img src="/stylesheets/img/slide_images/arrow-next.png" width="24" height="43" alt="Arrow Next"></a>
        </div>
        <img src="/stylesheets/img/slide_images/example-frame.png" width="739" height="341" alt="Example Frame" id="frame">
    </div>
</div>

<script type="text/javascript">
$(function(){
    var startSlide = 1;
    // Get slide number if it exists
    if (window.location.hash) {
        startSlide = window.location.hash.replace('#','');
    }
    // Initialize Slides
    $('#slides').slides({
        preload: true,
        preloadImage: '/stylesheets/img/slide_images/loading.gif',
        generatePagination: true,
        play: 0,
        pause: 2500,
        hoverPause: true,
        // Get the starting slide
        start: startSlide,
        animationComplete: function(current){
            // Set the slide number as a hash
            window.location.hash = '#' + current;
        }
    });

    $('.word').click(function(){
        var elem = $(this);
        if(elem.data('flipped')){

            elem.revertFlip();

            elem.data('flipped', false);
        }else
        {
            elem.flip({
                direction: 'tb',
                color:'#F3F1E5',
                speed:350,
                onBefore:function(){
                    elem.html(elem.siblings('.slide_back').html());
                },
                onEnd: function(){
                }
            });
            elem.data('flipped', true);
        }
    });


    $(document).keydown(function(event) {

        switch(event.which){

            case 37 :
                $(".prev").trigger("click");
                break;
            case 39 :
                $(".next").trigger("click");
                break;
            default:
                break;
        }
    });
});

</script>